<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_30sdp" />
            <gradient
                android:angle="90"
                android:endColor="#0000"
                android:startColor="@color/original_menu"
                android:type="linear"> <!-- Change this value to have the correct shadow angle, must be multiple from 45 -->
            </gradient>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#E3E3E3" />
            <gradient
                android:angle="135"
                android:endColor="#0A70EC"
                android:startColor="#E15BDA"
                android:type="linear"> <!-- Change this value to have the correct shadow angle, must be multiple from 45 -->
            </gradient>

            <corners android:radius="@dimen/_50sdp"></corners>
        </shape>
    </item>
</layer-list>