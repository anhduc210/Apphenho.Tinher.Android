<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_back"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/giaodien"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="@dimen/_350sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:scaleType="fitCenter"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/begin_logo_color"
                android:background="@android:color/transparent"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"/>
            <TextView
                android:text="Sign Up"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/giaodien"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/original_menu"
                android:id="@+id/et_phone"
                android:hint="PhoneNumber"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="phone"
                android:background="@drawable/begin_signup_et"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_40sdp"/>
            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/original_menu"
                android:id="@+id/et_pass"
                android:hint="Password"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="textPassword"
                android:background="@drawable/begin_signup_et"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_40sdp"/>
            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/original_menu"
                android:id="@+id/et_name"
                android:hint="Name"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="text"
                android:background="@drawable/begin_signup_et"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_40sdp"/>
            <EditText
                android:textColor="@color/black"
                android:textColorHint="@color/original_menu"
                android:id="@+id/et_age"
                android:hint="Age"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="number"
                android:background="@drawable/begin_signup_et"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_40sdp"/>

                <RadioGroup
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:textColor="@color/black"
                        android:checked="true"
                        android:id="@+id/cb_male"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/begin_signup_et"
                        android:textSize="@dimen/_15sdp"
                        android:text="Male"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"/>
                    <RadioButton
                        android:textColor="@color/black"
                        android:id="@+id/cb_female"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/begin_signup_et"
                        android:textSize="@dimen/_15sdp"
                        android:text="Female"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_40sdp"/>
                </RadioGroup>


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:id="@+id/bt_continue"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"

            android:background="@drawable/login_button_bg"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            />
    </RelativeLayout>

</layout>